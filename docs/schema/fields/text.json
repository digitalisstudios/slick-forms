    "validation_rules": {
        "type": "array",
        "required": false,
        "storage": "json_column",
        "description": "Laravel validation rules",
        "example": [
            "min",
            "max",
            "regex",
            "alpha",
            "alpha_num",
            "alpha_dash"
        ],
        "available_rules": {
            "min": {
                "format": "min:{value}",
                "description": "Minimum Length",
                "help": "Minimum number of characters required",
                "value_type": "number",
                "placeholder": null
            },
            "max": {
                "format": "max:{value}",
                "description": "Maximum Length",
                "help": "Maximum number of characters allowed",
                "value_type": "number",
                "placeholder": null
            },
            "regex": {
                "format": "regex:{value}",
                "description": "Pattern (Regex)",
                "help": "Regular expression pattern to match",
                "value_type": "text",
                "placeholder": "/^[A-Z][a-z]+$/"
            },
            "alpha": {
                "format": "alpha",
                "description": "Alphabetic Characters Only",
                "help": "",
                "value_type": "checkbox",
                "placeholder": null
            },
            "alpha_num": {
                "format": "alpha_num",
                "description": "Alphanumeric Characters Only",
                "help": "",
                "value_type": "checkbox",
                "placeholder": null
            },
            "alpha_dash": {
                "format": "alpha_dash",
                "description": "Allow Letters, Numbers, Dashes, Underscores",
                "help": "",
                "value_type": "checkbox",
                "placeholder": null
            }
        }
